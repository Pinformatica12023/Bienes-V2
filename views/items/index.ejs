    <body>

      <div class="py-5 text-center">
        <a href="/">
          <img class="d-block mx-auto mb-4" src="/img/logo_FLA.png" alt="" width="72" height="57">
        </a>
        <h1 class="h2">Ingreso de activos</h1>
      </div>

        <div class="row">
          <div class="col-md-6">
            <div class="container">
              <main>
  
                <form action="/items" method="post">
                  <div class="row g-5 justify-content-center">
                      <div class="col-md-7 col-lg-8">
    
                          <div class="row g-3">
  
                            <div class="col-sm-6">
                              <label for="name" class="form-label">Nombre</label>
                              <input type="text" class="form-control" id="name" name="name" placeholder="" value="" required>
                            </div>
                
                            <div class="col-sm-6">
                              <label for="brand" class="form-label">Marca</label>
                              <input type="text" class="form-control" id="brand" name="brand" placeholder="" value="" required>
                            </div>
                
                            <div class="col-sm-4">
                              <label for="tag" class="form-label">Placa</label>
                              <input type="text" class="form-control" id="tag" name="tag" placeholder="" required>
                            </div>
  
                            <div class="col-sm-4">
                              <label for="tagType" class="form-label">Tipo de placa</label>
                              <select class="form-select" id="" required name="tagType">
                                <option value="">Selecciona...</option>
                                <option value="Gobernaci칩n">Gobernaci칩n</option>
                                <option value="FLA">FLA</option>
                              </select>
                            </div>
                
                            <div class="col-sm-4">
                              <label for="serialNumber" class="form-label">Serie</label>
                              <input type="text" class="form-control" id="serialNumber" name="serialNumber">
                            </div>
                
                            <div class="col-12">
                              <label for="description" class="form-label">Descripci칩n</label>
                              <textarea class="form-control" name="description" id="description" rows="4" style="resize: none;"></textarea>
                            </div>
      
                          </div>
                
                          <hr class="my-4">
                          
                          <button type="submit" class="btn btn-outline-success mx-auto d-block w-50">
                              Agregar 
                          </button>
                          
                          <button type="button" class="btn btn-outline-secondary mx-auto d-block w-50 m-3"  onclick="window.location.href='/'">
                              Cancelar
                          </button>
                      
                      </div>
                    </div>
                </form>
              </main>
            </div>
          </div>

          <div class="col-md-6">
            
              <div class="mx-auto d-flex justify-content-center align-items-center flex-grow-1 w-75 text-center">
                  <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">Activo</th>
                          <th scope="col">Marca</th>
                          <th scope="col">Placa</th>
                          <th scope="col">Serie</th>
                        </tr>
                      </thead>
                      <tbody class="table-group-divider">
                        <% items.forEach(device => { %>
                          <tr>
                            <th><%= device.name%></th>
                            <td><%= device.brand%></td>
                            <td><%= device.tag%></td>
                            <td><%= device.serialNumber%></td>
                          </tr>
                        <% }); %>
                      </tbody>
                  </table>
              </div>
            
          </div>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu" crossorigin="anonymous"></script>
