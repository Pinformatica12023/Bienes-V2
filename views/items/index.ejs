                <h1 class="h2">Formulario de ingreso de activos</h1>
              </div>

              <form action="/items" method="post">
                <div class="row g-5 justify-content-center">
                    <div class="col-md-7 col-lg-8">
  
                        <div class="row g-3">

                          <div class="col-sm-6">
